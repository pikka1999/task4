<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/96eac4efab.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">

            </span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li class="fas fa-home nav-link text-light"><%= link_to'Home', user_path(current_user.id) %></li>
                <li class="fas fa-users nav-link text-light"><%= link_to 'Users',users_path %></li>
                <li class="fas fa-book-open nav-link text-light"><%= link_to 'Books',books_path  %></li>
                <li><%= link_to 'logout',destroy_user_session_path,class:"fas fa-sign-out-alt nav-link text-light", method: :delete %></li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="fas fa-home nav-link text-light" ><%= link_to 'Home' ,root_path %></li>
                <li class="fas fa-link nav-link text-light"><%= link_to 'About' ,home_about_path %></li>
                <li class="fas fa-user-plus nav-link text-light"><%= link_to'sign up', new_user_registration_path %></li>
                <li class="fas fa-sign-in-alt nav-link text-light"><%= link_to 'login', new_user_session_path %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
