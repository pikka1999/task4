  <div class="col-md-3" >
  <div>
    <h2>User Info</h2>
      <table>
        <tbody>
          <tr>
            <td class="authorImage"><%= attachment_image_tag @user ,:profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
          </tr>
          <tr class="userName">
            <td>name</td><td><%= @user.name %></td>
          </tr>
          <tr class="userIntroduction">
            <td>introduction</td><td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

        <%= link_to edit_user_path(user) do %>
          <p class="btn btn-outline-secondary btn-block mx-auto">
            <i class="fas fa-user-cog"></i>
          </p>
        <% end %>

  </div>
      <h2>New book</h2>

     <%= form_with model: book,local:true do |f| %>
     <label>Title</label>
     <div class="field"><%= f.text_field :title %></div>
     <label>Opinion</label>
     <div class="field"><%= f.text_area :body %></div>
     <div class= "input"><%= f.submit'Create Book' %></div>
     <% end %>
</div>
