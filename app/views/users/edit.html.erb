<div class="container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class= "form-group">
                <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class= "form-group">
                <label for="inputImage">Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class= "form-group introduction_form">
                <label for="inputIntroduction">Introdoction</label>
                <%= f.text_field :introduction, autofocus: false, id:"inputIntroduction",placeholder:"introduction" %>
        </div>
        <div class= "form-group update_user">
                <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>

</div>